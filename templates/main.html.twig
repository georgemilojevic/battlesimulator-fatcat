{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
            <div class="mb-4">
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    {% endfor %}

    <!-- Create Game Block -->
    <div class="d-flex justify-content-around">
        <div class="col-md-4">
            <a href="{{ path("create-game") }}" class="btn btn-outline-dark btn-lg">Create Game</a>
            <hr>
            {% for message in app.flashes('gameStarted') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <div class="mb-4">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <h5>Game Started!</h5>
                    <span>Game ID: </span>
                    <span>Name VS Name</span>
                </div>
            {% endfor %}
        </div><!-- End Game Block -->

        <!-- Start List Games -->
        <div class="col-md-4">
            <a href="{{ path('list-all-games') }}" class="btn btn-outline-dark btn-lg">List Games</a>
            <hr>
        </div><!-- End List Games -->
    </div>

{% endblock %}