{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
            <div class="mb-4">
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    {% endfor %}
    <!-- Create Game Block -->
    <div class="d-flex justify-content-around">
        <div class="col-md-4">
            <a href="{{ path('start-game') }}"
               class="btn btn-outline-dark btn-lg
            {% if armyCount < 5 %} disabled {% endif %}">
                Start Game</a>
            <hr>
            {% for message in app.flashes('gameStarted') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <div class="mb-4">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <h5>Game Started!</h5>
                    <span>Game ID: </span>
                    <span>Name VS Name</span>
                </div>
            {% endfor %}
            <div class="container">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <a href="/game/play" class="btn btn-outline-secondary">Run attack</a>
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/game/play?random">Attack Random</a>
                            <a class="dropdown-item" href="/game/play?strongest">Attack Strongest</a>
                            <a class="dropdown-item" href="/game/play?weakest">Attack Lowest</a>
                        </div>
                    </div>
                    <input type="text" class="form-control" aria-label="Text input with segmented dropdown button">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <a href="/game/log{id}" class="btn btn-outline-secondary">Get Game Log</a>
                    </div>
                    <input type="text" class="form-control" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <a href="/game/reset{id}" class="btn btn-outline-secondary">Reset Game</a>
                    </div>
                    <input type="text" class="form-control" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1">
                </div>
            </div>
        </div><!-- End Game Block -->
        <!-- Start Add Army Block -->
        <div class="col-md-4">
            <a href="" data-toggle="modal" data-target="#createGameModal" class="btn btn-outline-dark btn-lg">Add Army</a>
            <hr>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <div class="mb-4">
                        {{ message }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            {% endfor %}
            {% for message in app.flashes('warning') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <div class="mb-4">
                        {{ message }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            {% endfor %}
        </div><!-- End Add Army Block -->
        <!-- Start List Games -->
        <div class="col-md-4">
            <a href="{{ path('list-all-games') }}" class="btn btn-outline-dark btn-lg">List Games</a>
            <hr>
        </div><!-- End List Games -->
    </div>

    {% include 'create-game-modal.html.twig' %}

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>

    <script>
        $('.alert').alert()
    </script>

{% endblock %}